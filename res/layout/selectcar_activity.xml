<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <TextView 
        android:layout_marginTop="30dp"
        android:layout_marginLeft="50dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text="@string/selectcar_selectCar">
    </TextView>
    
    <LinearLayout
        android:layout_marginTop="40dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

	    <Button
    	    android:id="@+id/select_btBlueCar"
       		android:background="@drawable/blue_car"
       		android:layout_marginLeft="40dp"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content">
    	</Button>
	    <Button
    	    android:id="@+id/select_btRedCar"
       		android:background="@drawable/red_car"
       		android:layout_marginLeft="40dp"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content">
    	</Button>
    </LinearLayout>
    
    <LinearLayout 
        android:layout_marginTop="20dp"
        android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal">
	    <Button
    	    android:id="@+id/select_btBlueRedCar"
       		android:background="@drawable/bluered_car"
        	android:layout_marginLeft="40dp"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content">
    	</Button>
	    <Button
    	    android:id="@+id/select_btBlueWhiteCar"
       		android:background="@drawable/bluewhite_car"
        	android:layout_marginLeft="40dp"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content">
    	</Button>
    </LinearLayout>
    
    <LinearLayout 
        android:layout_marginTop="20dp"
        android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal">
	    <Button
    	    android:id="@+id/select_btGreenWhiteCar"
       		android:background="@drawable/greenwhite_car"
        	android:layout_marginLeft="40dp"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content">
    	</Button>
	    <Button
    	    android:id="@+id/select_btRedYellowCar"
       		android:background="@drawable/redyellow_car"
        	android:layout_marginLeft="40dp"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content">
    	</Button>
    </LinearLayout>
    
    <LinearLayout 
        android:layout_marginTop="20dp"
        android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal">
	    <Button
    	    android:id="@+id/select_btWhiteCar"
       		android:background="@drawable/white_car"
        	android:layout_marginLeft="40dp"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content">
    	</Button>
	    <Button
    	    android:id="@+id/select_btF1BlueCar"
       		android:background="@drawable/f1blue_car"
        	android:layout_marginLeft="40dp"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content">
    	</Button>
    </LinearLayout>
    
    <LinearLayout 
        android:layout_marginTop="20dp"
        android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal">
	    <Button
    	    android:id="@+id/select_btF1RedCar"
       		android:background="@drawable/f1red_car"
        	android:layout_marginLeft="40dp"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content">
    	</Button>
	    <Button
    	    android:id="@+id/select_btRandomCar"
    	    android:text="@string/selectcar_random"
        	android:layout_marginLeft="40dp"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content">
    	</Button>
    </LinearLayout>
    
</LinearLayout>