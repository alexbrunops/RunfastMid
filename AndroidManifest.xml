        android:screenOrientation="portrait" />
    <activity android:name="br.unb.unbiquitous.ubiquitos.runFast.mid.SelectController"
        android:screenOrientation="portrait" />
    <activity android:name="br.unb.unbiquitous.ubiquitos.runFast.mid.ControllerActivity"
        android:screenOrientation="landscape" />
    <activity android:name="br.unb.unbiquitous.ubiquitos.runFast.mid.ControllerActivityMove"
        android:screenOrientation="landscape" />
    
    <activity android:name="br.unb.unbiquitous.ubiquitos.runFast.minigames.bonusmg.BonusActivity"
        android:screenOrientation="portrait" />
