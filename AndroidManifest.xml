    <activity android:name="br.unb.unbiquitous.ubiquitos.runFast.mid.MainActivity"
        android:screenOrientation="portrait">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />
        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>
    <activity android:name="br.unb.unbiquitous.ubiquitos.runFast.mid.SelectActivity"
        android:screenOrientation="portrait" />
